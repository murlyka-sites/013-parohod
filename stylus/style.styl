@import "inc/fonts";
@import "../libs/bootstrap-stylus/bootstrap/variables";
@import "bootstrap/variables";
@import "inc/variables";
@import "bootstrap/mixins";
@import "inc/reset";

$color-dark = #272a2e;
$color-gray = #95989b;
$color-orange = #cc3a15;
$color-white = white;

.button
	padding 5px 20px
	text-align center
	text-decoration none
	border none


	&:hover,
	&:focus,
	&:active
		text-decoration	none
		color white
		opacity 0.75

	&_theme
		&_dark
			background $color-dark
			color white
			color #ffffff
			font-family "Open Sans", sans-serif
			font-size 13px
			font-weight 600
			line-height 20px

.svg
	display inline-block
	vertical-align middle

.header-first
	background $color-white
	color $color-dark

	&__container
		display block
		padding 5px 0 8px

		@supports(flex-wrap wrap)
			display flex
			flex-wrap wrap
			justify-content space-between
			align-items flex-end



		@media (min-width 768px)
			display flex
			justify-content space-between
			align-items flex-end

		@media (min-width 768px)
			margin-right 60px

	&__column
		&_logo
			@media (max-width 520px)
				width 100%

			@media (min-width $screen-sm)
				margin-right 10px

		&_search
			display flex
			align-items center
			justify-content space-between

			@media (max-width 520px)
				width "calc(100% - 50px)" % ()


			@media (max-width 767px)
				padding-top 10px

		&_nav
			@media (max-width $screen-md - 1px)
				margin-left auto
				padding-top 10px

			@media (min-width 520px) and (max-width $screen-md - 1px)
				margin-left auto
.header-drop

	.flexMenu-viewMore
		position absolute
		left 10px
		right 10px
		z-index 10

	.flexMenu-viewMore>a
		font: normal normal normal 14px/1 FontAwesome;
		font-size: inherit;
		text-rendering: auto;
		-webkit-font-smoothing: antialiased;
		margin-bottom: -5px;
		padding: 0;
		margin-right: 10px;
		background: transparent;
		border: none;
		font-size: 22px;
		line-height: 1;
		text-decoration none

	.flexMenu-viewMore .nav-top__item
		display block

	&__list
		position absolute
		z-index 10
		right 0
		display none
		column-count 1
		box-shadow 4px 4px 8px rgba(10, 10, 10, 0.15)
		float right
		column-gap 20px
		padding 20px
		background white
		// float right
		margin 8px 0 0
		list-style-type none
		line-height 20px
		color #272a2e
		font-family Roboto
		font-size 14px
		font-weight 400

		&_open
			display block

		&_col_1
			width 50%
			column-count 1

		&_col_2, &_col_3, &_col_4
			width 100%
			column-count 2

		@media (min-width 768px)
			column-count 1
			width 25%

			&_col
				&_4
					width 100%
					column-count 4
				&_3
					width 75%
					column-count 3

				&_2
					width 50%
					column-count 2
		// box-shadow 4px 4px 8px rgba(10, 10, 10, 0.15)

		// &_col
		// 	&_1
		// 		padding-left 280px
		// 	&_2
		// 		adding-left 280px
		// 	&_3
		// 	&_4
	&__item
		padding 0 20px

.search-top
	display flex
	width 100%

	&__field
		width "calc(100% - 50px)" % ()
		border none
		border-bottom 1px solid $color-gray
		margin-right 14px

		@media (min-width $screen-sm)
			width 147px

		&:focus
			border-color $color-dark

	&__button
		background none
		border none
		padding 0

		&:hover
			opacity 0.8


.header-second
	background $color-dark
	color $color-white

